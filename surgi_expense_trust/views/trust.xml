<odoo>
    <data>


        <record id="view_expenses_tree_hr_edit" model="ir.ui.view">
            <field name="name">name.hr.expense.tree.data</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='state']" position="before">
                    <field name="is_trust" invisible="1"/>
                    <field name="trust_net" attrs="{'invisible': [('is_trust','=',False)]}"/>
                </xpath>

            </field>
        </record>

        <record id="hr_expense_view_form_edit" model="ir.ui.view">
            <field name="name">name.hr.expense.data</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tax_ids']" position="after">
                    <field name="sale_order2" attrs="{'invisible': [('is_expenses', '=', False),],'required': [('is_expenses', '=', True),]}"/>
                    <field name="is_expenses" force_save="1"/>
                </xpath>

                <xpath expr="//field[@name='description']" position="before">
                    <field name="expense_report_ids" nolabel="1"/>
                </xpath>

                <xpath expr="//field[@name='total_amount']" position="after">
                    <field name="is_trust" invisible="1"/>
                    <field name="trust_net" attrs="{'invisible': [('is_trust','=',False)]}"/>
                </xpath>

                <xpath expr="//field[@name='analytic_tag_ids']" position="after">
                    <field name="partner_id"/>
                    <field name="event_id"/>
<!--                    <field name="is_expense_report"/>-->
                    <button name="compute_expense_report" type="object" string="Get Trust"/>

                </xpath>

            </field>
        </record>


        <record id="hr_expenses_trust_menu" model="res.groups">
            <field name="name">Trust</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>


        <record id="hr_expense_actions_my_unsubmitted_trust" model="ir.actions.act_window">
            <field name="name">Trust</field>
            <field name="res_model">hr.expense</field>
            <field name="view_mode">tree,kanban,form,graph,pivot,activity</field>
            <field name="search_view_id" ref="hr_expense.hr_expense_view_search"/>
            <field name="context">{'search_default_my_expenses': 1, 'search_default_no_report': 1}</field>
            <field name="domain">[('product_id.name_1222','=',True),('trust_net','>',0)]</field>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new expense
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_trust_action_new" name="Trust" parent="hr_expense.menu_hr_expense_root"
                  action="hr_expense_actions_my_unsubmitted_trust" sequence="5" groups="hr_expenses_trust_menu"/>
    </data>
</odoo>