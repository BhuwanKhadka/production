<odoo>

    <data>


        <!-- Inherit Form View to Modify it -->
        <record id="form_view_sale_order_inherit_page" model="ir.ui.view">
            <field name="name">name.sale.order.form.edit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='other_information']" position="after">
                    <page string="Expense">
                        <group>
                            <button name="compute_total_expenses" type="object" string="Expense"/>
                        </group>
                        <field name="expense_rec_ids">
                            <tree editable="bottom" create="0" edit="0">
                                <field name="name"/>
                                <field name="product_id"/>
                                <field name="total_amount"/>
                            </tree>
                        </field>
                        <group>
                            <group style="float:right;text-align:right;width:15%">
                                <field name="total_expense" readonly="1"/>
                            </group>
                        </group>
                    </page>


                </xpath>

            </field>
        </record>


    </data>


