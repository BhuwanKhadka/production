<odoo>


    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="form_view_product_product_edit" model="ir.ui.view">
            <field name="name">name.product.product.data</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='barcode']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="name_1222"/>
<!--                    <field name="is_expenses"/>-->
                </xpath>
                <div name="options" position="inside">
                    <div>
                        <field name="is_expenses"/>
                        <label for="is_expenses"/>
<!--                        <field name="is_expenses"/>-->
                    </div>
                </div>

            </field>
        </record>


        <record id="form_view_product_template_edit" model="ir.ui.view">
            <field name="name">name.product.template.data</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <div name="options" position="inside">
                    <div>
                        <field name="is_expenses"/>
                        <label for="is_expenses"/>

                    </div>
                </div>

            </field>
        </record>


    </data>
</odoo>